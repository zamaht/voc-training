{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": ["./dist/*"],
        "include": ["*.ts"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 140,
        "formatWithErrors": true
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "ignore": ["node_modules"],
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "always",
            "quoteStyle": "single",
            "lineWidth": 120
        }
    }
}
